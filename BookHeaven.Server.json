    "/api/profiles/{profileId}/{bookId}": {
      "get": {
        "tags": [
          "Book Progress"
        ],
        "summary": "Get book progress by profile",
        "description": "Retrieves the reading progress of a specific book for a given profile.",
        "operationId": "GetBookProgressByProfile",
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "profileId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BookProgress"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/progress/update": {
      "put": {
        "tags": [
          "Book Progress"
        ],
        "summary": "Updates the reading progress of a book for a user profile.",
        "description": "This endpoint allows updating the last read timestamp of a book's progress. If the provided last read time is older than or equal to the existing one, the update is skipped.",
        "operationId": "UpdateBookProgress",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookProgress"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
