  "paths": {
    "/opds": {
      "get": {
        "tags": [
          "OPDS"
        ],
        "summary": "OPDS Catalog",
        "description": "Retrieves the book catalog in OPDS format.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/profiles": {
      "get": {
        "tags": [
          "Profiles"
        ],
        "summary": "Get all profiles",
        "description": "Returns a list of all profiles in the system.",
        "operationId": "GetAllProfiles",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Profile"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/profile/settings/update": {
      "put": {
        "tags": [
          "Profiles"
        ],
        "summary": "Updates the profile settings for a given profile ID.",
        "description": "This endpoint allows you to update the profile settings for a specific profile. If the profile settings do not exist, they will be created.",
        "operationId": "UpdateProfileSettings",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProfileSettings"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/fonts": {
      "get": {
        "tags": [
